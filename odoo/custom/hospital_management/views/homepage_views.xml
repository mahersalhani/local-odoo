<odoo>
    <record id="view_hospital_homepage" model="ir.ui.view">
        <field name="name">hospital.homepage</field>
        <field name="model">hospital.homepage</field>
        <field name="arch" type="xml">
            <div class="homepage">
                <h1 class="text-center">Ho≈ü Geldiniz</h1>
                <div class="menu">
                    <div class="menu-item" t-on-click="action_view_appointments">
                        <img class="menu-icon" src="/hospital_management/static/src/img/icon_appointments.png" alt="Randevular Icon" />
                        Randevular
                    </div>
                    <div class="menu-item" t-on-click="action_view_patients">
                        <img class="menu-icon" src="/hospital_management/static/src/img/icon_patients.png" alt="Hastalar Icon" />
                        Hastalar
                    </div>
                    <div class="menu-item" t-on-click="action_view_doctors">
                        <img class="menu-icon" src="/hospital_management/static/src/img/icon_doctors.png" alt="Doktorlar Icon" />
                        Doktorlar
                    </div>
                    <div class="menu-item" t-on-click="action_view_payments">
                        <img class="menu-icon" src="/hospital_management/static/src/img/icon_payments.png" alt="Muhasebe Icon" />
                        Muhasebe
                    </div>
                </div>
                <div class="buttons">
                    <button type="button" class="button" t-on-click="action_view_appointments">
                        <img class="button-icon" src="/hospital_management/static/src/img/icon_appointments.png" alt="Randevular" />
                        Randevular
                    </button>
                    <button type="button" class="button" t-on-click="action_view_patients">
                        <img class="button-icon" src="/hospital_management/static/src/img/icon_patients.png" alt="Hastalar" />
                        Hastalar
                    </button>
                    <button type="button" class="button" t-on-click="action_view_doctors">
                        <img class="button-icon" src="/hospital_management/static/src/img/icon_doctors.png" alt="Doktorlar" />
                        Doktorlar
                    </button>
                    <button type="button" class="button" t-on-click="action_view_payments">
                        <img class="button-icon" src="/hospital_management/static/src/img/icon_payments.png" alt="Muhasebe" />
                        Muhasebe
                    </button>
                </div>
            </div>
        </field>
    </record>
</odoo>
